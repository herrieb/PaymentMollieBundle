<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="herrieb_payment_mollie.controller.notification.class">herrieb\Payment\MollieBundle\Controller\NotificationController</parameter>
        <parameter key="herrieb_payment_mollie.gateway.class">Omnipay\Mollie\Gateway</parameter>
        <parameter key="herrieb_payment_mollie.form.ideal_type.class">Herrieb\Payment\MollieBundle\Form\IdealType</parameter>
        <parameter key="herrieb_payment_mollie.form.mistercash_type.class">Herrieb\Payment\MollieBundle\Form\MistercashType</parameter>
        <parameter key="herrieb_payment_mollie.form.creditcard_type.class">Herrieb\Payment\MollieBundle\Form\CreditcardType</parameter>
        <parameter key="herrieb_payment_mollie.form.sofort_type.class">Herrieb\Payment\MollieBundle\Form\SofortType</parameter>
        <parameter key="herrieb_payment_mollie.form.banktransfer_type.class">Herrieb\Payment\MollieBundle\Form\BanktransferType</parameter>
        <parameter key="herrieb_payment_mollie.form.belfius_type.class">Herrieb\Payment\MollieBundle\Form\BelfiusType</parameter>
        <parameter key="herrieb_payment_mollie.form.kbc_type.class">Herrieb\Payment\MollieBundle\Form\KbcType</parameter>
        <parameter key="herrieb_payment_mollie.form.inghomepay_type.class">Herrieb\Payment\MollieBundle\Form\InghomepayType</parameter>
        <parameter key="herrieb_payment_mollie.form.bitcoin_type.class">Herrieb\Payment\MollieBundle\Form\BitcoinType</parameter>
        <parameter key="herrieb_payment_mollie.form.paypal_type.class">Herrieb\Payment\MollieBundle\Form\PaypalType</parameter>
        <parameter key="herrieb_payment_mollie.form.paysafecard_type.class">Herrieb\Payment\MollieBundle\Form\PaysafecardType</parameter>
        <parameter key="herrieb_payment_mollie.plugin.default.class">Herrieb\Payment\MollieBundle\Plugin\DefaultPlugin</parameter>
        <parameter key="herrieb_payment_mollie.plugin.ideal.class">Herrieb\Payment\MollieBundle\Plugin\IdealPlugin</parameter>
        <parameter key="herrieb_payment_mollie.api_key" />
        <parameter type="collection" key="herrieb_payment_mollie.ideal.issuers">
            <parameter key="ideal_ABNANL2A">ABN AMRO</parameter>
            <parameter key="ideal_ASNBNL21">ASN Bank</parameter>
            <parameter key="ideal_BUNQNL2A">Bunq</parameter>
            <parameter key="ideal_INGBNL2A">ING</parameter>
            <parameter key="ideal_KNABNL2H">Knab</parameter>
            <parameter key="ideal_MOYONL21">Moneyou</parameter>
            <parameter key="ideal_RABONL2U">Rabobank</parameter>
            <parameter key="ideal_RBRBNL21">RegioBank</parameter>
            <parameter key="ideal_SNSBNL2A">SNS Bank</parameter>
            <parameter key="ideal_TRIONL2U">Triodos Bank</parameter>
            <parameter key="ideal_FVLBNL22">Van Lanschot</parameter>
        </parameter>
    </parameters>

    <services>
        <service id="herrieb_payment_mollie.controller.notification" class="%herrieb_payment_mollie.controller.notification.class%">
            <argument type="service" id="payment.plugin_controller" />
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <tag name="controller.service_arguments" />
            <call method="setLogger">
                <argument type="service" id="monolog.logger.herrieb_payment_mollie" />
            </call>
        </service>

        <service id="herrieb_payment_mollie.gateway" class="%herrieb_payment_mollie.gateway.class%">
            <call method="setApiKey">
                <argument>%herrieb_payment_mollie.api_key%</argument>
            </call>
        </service>

        <service id="herrieb_payment_mollie.plugin.default" class="%herrieb_payment_mollie.plugin.default.class%">
            <argument type="service" id="herrieb_payment_mollie.gateway" />
            <call method="setLogger">
                <argument type="service" id="monolog.logger.herrieb_payment_mollie" />
            </call>
            <tag name="payment.plugin" />
        </service>

        <service id="herrieb_payment_mollie.plugin.ideal" class="%herrieb_payment_mollie.plugin.ideal.class%">
            <argument type="service" id="herrieb_payment_mollie.gateway" />
            <call method="setLogger">
                <argument type="service" id="monolog.logger.herrieb_payment_mollie" />
            </call>
            <tag name="payment.plugin" />
        </service>

        <service id="monolog.logger.herrieb_payment_mollie" parent="monolog.logger_prototype">
            <argument index="0">herrieb_payment_mollie</argument>
        </service>
    </services>
</container>
